{
    "id": "billcom-demo",
    "hasLayers": false,
    "manifestVersion": "2",
    "allowedOrigins": [
        "*"
    ],
    "sourcePath": "/table-demo.html",
    "accessPoints": [
        {
            "overrideAppRoute": "billdotcomdemo"
        },
        {
            "sourcePath": "/BillsPaySettings.html",
            "attachPoint": "_apCompanySettingsTab",
            "linkText": "Pay Bills (BDC))"
        }
    ],
    "extensions": {
        "general-extension/name-status-section": [
            {
                "type": "billPayment",
                "controller": "qbo-ui-libs-plugins/addon/iFrameViewController",
                "xdmParameters": {
                    "sourcePath":"/InfoMessage.html",
                    "cssPosition":"relative",
                    "height": "70%",
                    "style":"transform:translateZ(0)"
                }
            }
        ],
        "shell/global-header/create/vendors": [
            {
                "id": "payBills",
                "type": "menuItem",
                "params": {
                    "path": "billPaySettings",
                    "label": "Pay Bills (BDC))",
                    "priority": 100
                }
            }
        ],
        "routes": [
            {
                "path": "billPaySettings",
                "controller": "qbo-ui-libs-plugins/addon/iFrameRouteController",
                "xdmParameters": {
                    "useTrowser": true,
                    "sourcePath": "/BillsPaySettings.html",
                    "width": "100%"
                }
            }
        ]
    }
}
